<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#1A2980</item>
        <item name="colorPrimaryVariant">#26D0CE</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#26D0CE</item>
        <item name="colorSecondaryVariant">#1A2980</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text appearance -->
        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <!-- Custom text style using Poppins font -->
    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Custom button style -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">#000000</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>
